<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <title>Document</title>
</head>

<body>
    <div class="container-fluid vh-100">
        <div class="row flex-nowrap h-100">
            <div class="col-auto col-2 bg-dark">
                <div class="h-100">
                    <h1 class="text-white">Job Vacancies</h1>
                    <nav class="nav flex-column">
                        <% if(currentUser){ %>
                            <a href="/admin" class="text-white text-decoration-none">Vacancies</a>
                            <form action="/auth/logout" method="post">
                                <input value="Logout" type="submit" class="btn btn-danger">
                            </form>
                            <% }else{ %>
                                <a href="/auth/register" class="text-white text-decoration-none">Register</a>
                                <a href="/auth/login" class="text-white text-decoration-none">Login</a>
                                <% } %>
                    </nav>
                </div>
            </div>
            <div class="col">
            <div>
                <% if(alerts.success)  { %>
                    <% alerts.success.forEach(msg => {%>
                        <%= msg %>
                    <% }) %>
                <% }%>
            </div>
                <%- body %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>
